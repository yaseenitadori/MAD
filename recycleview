        android:weightSum="4"
        android:layout_alignParentBottom="true">

        <LinearLayout
            style="@style/bottomImageContainerStyle">

            <ImageView
                android:layout_width="@dimen/footer_icon_width"
                android:layout_height="@dimen/footer_icon_height"
